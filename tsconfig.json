{
  "compilerOptions": {
      "experimentalDecorators": true,
      "module": "CommonJS",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "esnext",
      "noImplicitAny": true,
      "moduleResolution": "Node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": false,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "paths": {
        "~/*": ["src/*"]
      },
      "rootDir": "./"
  },
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "src/**/*.ts",
    "src/server.ts"
  ],
  "exclude":[
    "node_modules"
  ]
}